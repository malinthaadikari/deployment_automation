    <dbConfig name="governance">
        <dataSource>jdbc/<%= @registry_database %></dataSource>
    </dbConfig>

    <remoteInstance url="https://<%= @governance_subdomain %>.<%= @domain %>">
        <id>governance</id>
        <dbConfig>governance</dbConfig>
        <readOnly>false</readOnly>
        <registryRoot>/</registryRoot>
        <enableCache>true</enableCache>
        <cacheId><%= @registry_user %>@jdbc:mysql://<%= @mysql_server %>:<%= @mysql_port %>/<%= @registry_database %></cacheId>
    </remoteInstance>

    <mount path="/_system/governance" overwrite="virtual">
        <instanceId>governance</instanceId>
        <targetPath>/_system/governance</targetPath>
    </mount>

    <dbConfig name="config">
        <dataSource>jdbc/<%= @config_db %></dataSource>
    </dbConfig>

    <remoteInstance url="https://<%= @as_subdomain %>.<%= @domain %>">
        <id>config</id>
        <dbConfig>config</dbConfig>
        <readOnly>false</readOnly>
        <registryRoot>/</registryRoot>
        <enableCache>true</enableCache>
        <cacheId><%= @registry_user %>@jdbc:mysql://<%= @mysql_server %>:<%= @mysql_port %>/<%= @config_db %></cacheId>
    </remoteInstance>

    <mount path="/_system/config" overwrite="virtual">
        <instanceId>config</instanceId>
        <targetPath>/_system/<%= @config_target_path %></targetPath>
    </mount>
